<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size10"
    android:paddingRight="@dimen/size10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_flock_type_title"
            style="@style/TextSize15Color333"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="群类型" />

        <TextView
            android:id="@+id/tv_flock_type"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_flock_type_title"
            android:layout_marginLeft="@dimen/size5"
            android:maxLines="1"
            android:ellipsize="middle"
            style="@style/TextSize14Color999"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/size10"
            android:drawableRight="@mipmap/wode_back_setting" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_below="@id/tv_flock_type_title"
            android:background="#f5f5f5" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_flock_desc"
        style="@style/TextSize15Color333"
        android:paddingBottom="@dimen/size10"
        android:paddingTop="@dimen/size10"
        android:text="群描述" />

    <EditText
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size110"
        android:background="#f9f9f9"
        android:textColorHint="#999"
        android:gravity="left"
        android:hint="请输入群描述..."
        android:padding="@dimen/size5"
        android:textColor="#999"
        android:textSize="@dimen/sp15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/et_desc"
        android:layout_marginTop="@dimen/size10"
        android:background="#f5f5f5" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_linkman_title"
            style="@style/TextSize15Color333"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="联系人" />

        <TextView
            android:id="@+id/tv_linkman_name"
            style="@style/TextSize14Color999"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/size10"
            android:drawableRight="@mipmap/wode_back_setting" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_below="@id/tv_linkman_title"
            android:background="#f5f5f5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_phone_title"
            style="@style/TextSize15Color333"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="联系方式" />

        <TextView
            android:id="@+id/tv_phone_name"
            android:gravity="right"
            android:layout_width="match_parent"
            style="@style/TextSize14Color999"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/size10"
            android:drawableRight="@mipmap/wode_back_setting" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_below="@id/tv_phone_title"
            android:background="#f5f5f5" />
    </RelativeLayout>


    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size38"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size30"
        android:background="@drawable/hs_shape_ee9821_radius_3"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="@dimen/sp15" />
</LinearLayout>