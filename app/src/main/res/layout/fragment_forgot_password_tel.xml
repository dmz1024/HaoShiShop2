<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginTop="@dimen/size30"
        android:drawableLeft="@mipmap/zhuce_phone"
        android:drawablePadding="@dimen/size16"
        android:gravity="center_vertical"
        android:background="@null"
        android:hint="手机号"
        android:inputType="number"
        android:textColor="#666"
        android:textColorHint="#c3c3c3"
        android:textSize="@dimen/sp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_alignLeft="@id/et_name"
        android:layout_alignRight="@id/et_name"
        android:layout_below="@id/et_name"
        android:background="#dadada" />

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_alignLeft="@id/et_name"
        android:layout_alignRight="@id/et_name"
        android:layout_below="@id/et_name"
        android:layout_marginTop="@dimen/size20"
        android:background="@drawable/hs_shape_ee9821_radius_3"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="@dimen/sp16" />
</RelativeLayout>