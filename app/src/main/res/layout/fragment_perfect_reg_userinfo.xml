<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_tips"
        style="@style/TextSize14Color999"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size16"
        android:text="选择您要完善的信息" />

    <TextView
        android:id="@+id/tv_tips_1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size30"
        style="@style/TextSize14Color999"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size16"
        android:text="选择您要完善的信息" />
    <Button
        android:id="@+id/bt_choose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_above="@id/tv_tips_1"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:background="@drawable/hs_shape_ee9821_radius_3"
        android:text="请至少选择三项"
        android:textColor="#fff"
        android:textSize="@dimen/sp14" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_above="@id/bt_choose"
        android:layout_marginBottom="@dimen/size5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tips"
        android:layout_marginTop="@dimen/size16" />

</RelativeLayout>