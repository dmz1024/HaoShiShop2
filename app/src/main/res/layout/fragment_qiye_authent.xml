    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:background="@drawable/hs_shape_ee9821_radius_3"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="@dimen/sp14" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@id/bt_submit"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:paddingBottom="@dimen/size30"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size10"
                android:paddingRight="@dimen/size10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/size10"
                    android:paddingTop="@dimen/size10">

                    <TextView
                        style="@style/TextSize15Color333"
                        android:text="公司名称" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextSize14Color999"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size10"
                        android:drawablePadding="@dimen/size5"
                        android:drawableRight="@mipmap/wode_back_setting"
                        android:gravity="center_vertical|right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size0.5"
                    android:background="#f6f6f6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/size10"
                    android:paddingTop="@dimen/size10">

                    <TextView
                        style="@style/TextSize15Color333"
                        android:text="公司地址" />

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/TextSize14Color999"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size10"
                        android:drawablePadding="@dimen/size5"
                        android:drawableRight="@mipmap/wode_back_setting"
