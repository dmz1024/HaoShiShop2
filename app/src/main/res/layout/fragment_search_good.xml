<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="@dimen/size10">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextSize15Color333"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:text="取消"
            android:textColor="#ee9821" />

        <EditText
            android:id="@+id/et_search"

            android:layout_width="match_parent"
            android:layout_height="@dimen/size32"
            android:layout_marginRight="@dimen/size10"
            android:layout_toLeftOf="@id/tv_cancel"
            android:background="@drawable/rectangle_f3f3f3_ra2"
            android:drawableLeft="@mipmap/zqh_search"
            android:drawablePadding="@dimen/size15"
            android:hint="请输入商品关键字"
            android:paddingLeft="@dimen/size10"
            android:paddingRight="@dimen/size10"
            android:singleLine="true"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="@dimen/sp13" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="@dimen/size10">

        <FrameLayout
            android:id="@+id/fg_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"
            android:layout_marginLeft="@dimen/size5"
            android:layout_marginRight="@dimen/size5"
            android:padding="@dimen/size5"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10" />
    </FrameLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size0.5"
        android:background="#fff">

        <TextView
            style="@style/TextSize13Color999"
            android:padding="@dimen/size10"
            android:text="搜索记录" />

        <TextView
            android:id="@+id/tv_clear"
            style="@style/TextSize13Color999"
            android:layout_alignParentRight="true"
            android:padding="@dimen/size10"
            android:text="清除" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size0.5"
        android:background="#fff"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10" />
</LinearLayout>