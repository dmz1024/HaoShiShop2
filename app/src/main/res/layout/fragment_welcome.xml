<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:weightSum="14">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="#f6f6f6">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <view.Color2Text
            android:id="@+id/tv_next"
            android:layout_width="@dimen/size55"
            android:layout_height="@dimen/size55"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/size14"
            android:layout_marginTop="@dimen/size14"
            android:background="@drawable/rectangle_30333333"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/size4"
            android:text="跳过\n"
            android:textColor="#fff"
            android:textSize="@dimen/sp13"
            android:visibility="gone"
            app:Color2Text_color="#ee9821"
            app:Color2Text_content="5"
            app:Color2Text_size="@dimen/sp11" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_logo" />
</LinearLayout>