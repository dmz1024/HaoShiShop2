<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_safe_tips"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_fff"
    android:orientation="vertical"
    android:padding="@dimen/size15">

    <TextView
        style="@style/TextSize15Color333"
        android:layout_gravity="center_horizontal"
        android:text="风险提示"
        android:textColor="#838383" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_marginTop="@dimen/size15"
        android:background="#f5f5f5" />

    <TextView
        style="@style/TextSize15Color333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size15"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/size5"
        android:text="请核实对方身份后再进行线下交易\n郝氏不承担任何责任"
        android:textColor="#838383" />

    <Button
        android:id="@+id/bt_affirm"
        android:layout_width="@dimen/size120"
        android:layout_height="@dimen/size40"
        android:textSize="@dimen/sp15"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size15"
        android:background="@drawable/hs_shape_ee9821_radius_3"
        android:text="确认"
        android:textColor="#fff" />
</LinearLayout>