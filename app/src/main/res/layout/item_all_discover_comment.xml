<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="@dimen/size10"
    android:paddingRight="@dimen/size10"
    android:paddingTop="@dimen/size10">


    <com.recker.flyshapeimageview.ShapeImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/size50"
        android:layout_height="@dimen/size50"
        android:scaleType="fitXY"
        app:shape_mode="circle" />




    <TextView
        android:id="@+id/tv_name"
        style="@style/TextSize14Color333"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size3"
        android:layout_toRightOf="@id/iv_img"
        android:ellipsize="end"
        android:maxLength="10"
        android:maxLines="1"
        android:text="邓如果" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/TextSize12Color666"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size5"
        android:layout_toRightOf="@id/iv_img"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="商品不错，很不错，下次再来" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/TextSize11Color999"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="@dimen/size12"
        android:layout_alignLeft="@id/tv_name"
        android:text="2016-08-07 15:30" />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_alignParentRight="true"
        android:text="100"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/size5"
        android:drawableLeft="@mipmap/zan_weidianji"
        style="@style/TextSize11Color666" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/tv_time"
        android:background="#f5f5f5"
        android:layout_marginTop="@dimen/size10" />
</RelativeLayout>