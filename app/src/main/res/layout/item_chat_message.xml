<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size10">

    <com.recker.flyshapeimageview.ShapeImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/size45"
        android:layout_height="@dimen/size45"
        android:scaleType="fitXY"
        app:shape_mode="circle" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextSize15Color333"
        android:layout_marginLeft="@dimen/size14"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size2"
        android:layout_toLeftOf="@id/tv_time"
        android:layout_toRightOf="@id/iv_head"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/TextSize13Color333"
        android:layout_alignBottom="@id/iv_head"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginRight="@dimen/size10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#636363" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/TextSize12Color333"
        android:layout_alignBottom="@id/tv_name"
        android:layout_alignParentRight="true"
        android:textColor="#828282" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/iv_head"
        android:layout_marginTop="@dimen/size7"
        android:background="#e2e2e2" />
</RelativeLayout>