<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size70"
    android:background="#fff"
    android:paddingLeft="@dimen/size10"
    >
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size10"
        android:background="#f5f5f5" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_delete"
        android:background="#ee9821"
        android:textSize="@dimen/sp14"
        android:text="删除"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/size50"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/size60" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@id/view"
        style="@style/TextSize14Color333"
        android:layout_marginTop="@dimen/size10"
        android:layout_toLeftOf="@id/tv_delete"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/size4"
        android:maxLines="3"
        android:text="四惠天铁站旁天铁站旁四惠天铁站旁" />
    <TextView
        android:id="@+id/tv_content"
        style="@style/TextSize12Color999"
        android:maxLines="1"
        android:ellipsize="start"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/size15"
        android:text="河南人在北京   100次浏览   10评论" />

</RelativeLayout>