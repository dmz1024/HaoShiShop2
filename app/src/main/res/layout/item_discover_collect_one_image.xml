<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size120"
    android:background="#fff">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size10"
        android:background="#f5f5f5" />
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size110"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view"
        android:background="#ee9821"
        android:gravity="center"
        android:text="删除"
        android:textSize="@dimen/sp14"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/size115"
        android:layout_height="@dimen/size90"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:layout_toLeftOf="@id/tv_delete"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextSize14Color333"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size165"
        android:layout_marginTop="@dimen/size25"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/size2"
        android:maxLines="3"
        android:text="四惠天四惠天铁站旁铁站旁" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/TextSize12Color999"
        android:layout_alignBottom="@id/iv_img"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/size5"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size165"
        android:layout_marginTop="@dimen/size10"
        android:ellipsize="start"
        android:maxLines="1"
        android:text="河南人在北京   100次浏览   10评论" />
</RelativeLayout>