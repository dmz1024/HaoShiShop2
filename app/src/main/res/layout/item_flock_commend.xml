<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="@dimen/size10"
    android:paddingLeft="@dimen/size10"
    android:paddingRight="@dimen/size1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size30"
        android:background="@drawable/rectangle_fff_e2e2e2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:paddingTop="@dimen/size40">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextSize12Color333"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="河南老乡群" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/TextSize10Color999"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size7"
            android:text="本群是河南老乡群,欢迎大家进群" />

        <TextView
            android:id="@+id/tv_say_count"
            style="@style/TextSize11Color666"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size7"
            android:text="近七日发言99次" />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="@dimen/size83"
            android:layout_height="@dimen/size25"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size7"
            android:background="@drawable/rectangle_fff_e2e2e2"
            android:text="申请加入"
            android:textColor="#333"
            android:textSize="@dimen/sp13" />

        <View
            android:layout_width="@dimen/size110"
            android:layout_height="@dimen/size0.5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size7"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_count"
            style="@style/TextSize12Color999"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size7"
            android:text="99人已加入" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/size60"
        android:layout_height="@dimen/size60"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/zhuce_xingbie" />
</RelativeLayout>