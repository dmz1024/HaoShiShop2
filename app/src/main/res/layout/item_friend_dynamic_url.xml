<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size20"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:paddingTop="@dimen/size10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.recker.flyshapeimageview.ShapeImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/size45"
                android:layout_height="@dimen/size45"
                android:scaleType="fitXY"
                app:shape_mode="circle" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextSize14Color333"
                android:layout_marginLeft="@dimen/size15"
                android:layout_toRightOf="@id/iv_head"
                android:text="邓如果" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/TextSize12Color999"
                android:layout_alignParentRight="true"
                android:text="今天09:35" />

            <TextView
                android:id="@+id/tv_content"
                style="@style/TextSize14Color666"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="@dimen/size10"
                android:lineSpacingExtra="@dimen/size3"
                android:text="货到付款电话客服建华大街客户反馈几点回家开发环境看到回复见客户" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size56"
            android:layout_marginLeft="@dimen/size60"
            android:layout_marginTop="@dimen/size10"
            android:background="#ececec">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_marginLeft="@dimen/size3"
                android:layout_width="@dimen/size60"
                android:layout_height="@dimen/size50"
                android:layout_centerVertical="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextSize12Color666"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size5"
                android:layout_toRightOf="@id/iv_img"
                android:text="四惠地铁站两室一厅出租" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size60"
            android:layout_marginTop="@dimen/size15">

            <TextView
                android:id="@+id/tv_liulan"
                style="@style/TextSize11Color999"
                android:text="浏览100次" />

            <TextView
                android:id="@+id/tv_pinglun"
                style="@style/TextSize11Color999"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/liuyan"
                android:drawablePadding="@dimen/size1"
                android:text="100" />

            <TextView
                android:id="@+id/tv_zan"
                style="@style/TextSize11Color999"
                android:layout_marginRight="@dimen/size15"
                android:layout_toLeftOf="@id/tv_pinglun"
                android:drawableLeft="@mipmap/zan_weidianji"
                android:drawablePadding="@dimen/size1"
                android:text="50" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>