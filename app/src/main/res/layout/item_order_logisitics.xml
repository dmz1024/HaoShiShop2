<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="@dimen/size10"
    android:paddingRight="@dimen/size10"
    android:paddingTop="@dimen/size10">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/size13"
        android:layout_height="@dimen/size13"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/TextSize13Color999"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:layout_toRightOf="@id/iv_img"
        android:lineSpacingExtra="@dimen/size3"
         />

    <TextView
        android:id="@+id/tv_time"
        style="@style/TextSize10Color999"
        android:layout_alignLeft="@id/tv_content"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="@dimen/size3"
        />


    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_alignLeft="@id/tv_content"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="@dimen/size8"
        android:background="#e1e1e1" />

    <View
        android:id="@+id/view_1"
        android:layout_width="@dimen/size1"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_2"
        android:layout_below="@id/iv_img"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="@dimen/size6"
        android:background="#e1e1e1" />
</RelativeLayout>