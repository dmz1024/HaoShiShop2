<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/rectangle_fff_ra10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextSize15Color333"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_e2e2e2_ra10"
        android:gravity="center"
        android:padding="@dimen/size10"
        android:text="申请加入河南老乡群" />

    <EditText
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size80"
        android:layout_margin="@dimen/size10"
        android:background="@drawable/rectangle_fff_e2e2e2"
        android:gravity="left"
        android:textColor="#999"
        android:hint="请输入加入理由"
        android:padding="@dimen/size5"
        android:textColorHint="#999"
        android:textSize="@dimen/sp14" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="@dimen/size90"
        android:layout_height="@dimen/size35"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size10"
        android:background="@drawable/hs_shape_ee9821_radius_3"
        android:text="确认"
        android:textColor="#fff"
        android:layout_marginBottom="@dimen/size20"
        android:textSize="@dimen/sp14" />
</LinearLayout>