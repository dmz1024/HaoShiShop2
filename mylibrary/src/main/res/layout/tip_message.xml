<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/size110"
    android:background="@drawable/library_shape_fff_radius_5"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_title"
        android:text="提示"
        android:layout_marginTop="@dimen/size10"
        android:layout_centerHorizontal="true"
        style="@style/TextSize15Color333" />

    <TextView
        android:id="@+id/tv_message"
        android:gravity="center"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/size10"
        android:text="内容内容内容内容内容内容内容内容"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="@dimen/size3"
        android:layout_marginRight="@dimen/size15"
        android:layout_marginLeft="@dimen/size15"
        style="@style/TextSize13Color666" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size15"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/tv_message"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"

        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_left"
            android:layout_width="0dp"
            android:textSize="@dimen/sp14"
            android:layout_height="@dimen/size35"
            android:layout_weight="1"
            android:textColor="#666"
            android:background="@null"
            android:visibility="gone" />

        <View
            android:id="@+id/view_divider"
            android:visibility="gone"
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:textSize="@dimen/sp14"
            android:id="@+id/bt_right"
            android:layout_width="0dp"
            android:textColor="#333"
            android:layout_height="@dimen/size35"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>